<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DayTextView">
        <attr name="family" format="enum">
            <enum name="font_family_base" value="1" />
            <enum name="font_family_highlight" value="2" />
        </attr>
        <attr name="weight" format="enum">
            <enum name="font_weight_light" value="1" />
            <enum name="font_weight_regular" value="2" />
            <enum name="font_weight_medium" value="3" />
            <enum name="font_weight_bold" value="4" />
            <enum name="font_weight_black" value="5" />
        </attr>
        <attr name="size" format="enum">
            <enum name="font_size_xxxs" value="1" />
            <enum name="font_size_xxs" value="2" />
            <enum name="font_size_xs" value="3" />
            <enum name="font_size_sm" value="4" />
            <enum name="font_size_md" value="5" />
            <enum name="font_size_lg" value="6" />
            <enum name="font_size_xl" value="7" />
            <enum name="font_size_xxl" value="8" />
            <enum name="font_size_xxxl" value="9" />
        </attr>
    </declare-styleable>

    <declare-styleable name="DayButton">
        <attr name="type" format="enum">
            <enum name="primary_button" value="1" />
            <enum name="secondary_button" value="2" />
            <enum name="tertiary_button" value="3" />
            <enum name="ghost_button" value="4" />
        </attr>
        <attr name="icon" format="reference" />
    </declare-styleable>

    <declare-styleable name="DayEditText">
        <attr name="fieldType" format="enum">
            <enum name="text" value="1" />
            <enum name="number" value="2" />
            <enum name="phone" value="3" />
            <enum name="email" value="4" />
            <enum name="cpf" value="5" />
            <enum name="sms_code" value="6" />
        </attr>
        <attr name="fieldStyle" format="enum">
            <enum name="light" value="1" />
            <enum name="dark" value="2" />
        </attr>
        <attr name="title" format="string" />
        <attr name="hint" format="string" />
        <attr name="fieldIcon" format="reference" />
    </declare-styleable>
</resources>